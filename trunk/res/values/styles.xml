<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MainActivityStyle" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/ActivityAnimationStyle_Main</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="GeneralActivityStyle" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/ActivityAnimationStyle_General</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="ActivityAnimationStyle_Main" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/pop_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_not_change</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_not_change</item>
        <item name="android:activityCloseExitAnimation">@anim/pop_out</item>
    </style>
    
    <style name="ActivityAnimationStyle_General" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/pop_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_not_change</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_not_change</item>
        <item name="android:activityCloseExitAnimation">@anim/pop_out</item>
    </style>
    
    <style name="title_bar_text_common_style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="DlgTransparentBg" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="query_dlg_title_style">
        <item name="android:textColor">#7aa6e3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center|left</item>
    </style>
    
    <style name="query_dlg_btn_style">
        <item name="android:textColor">#1d1d1d</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="NotificationDlgStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
