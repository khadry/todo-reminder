<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/todo_list_item_bg" >

    <TextView
        android:id="@+id/todo_txt_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center|left"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/todo_txt_body"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/reminder_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/reminder_indicator"
            android:scaleType="matrix" />

        <TextView
            android:id="@+id/todo_reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reminder_indicator"
            android:layout_margin="2dp"
            android:layout_centerVertical="true"
            android:textColor="#8c8c8c"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>